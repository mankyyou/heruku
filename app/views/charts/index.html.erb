<p id="notice">
    <%= notice %>
</p>

<h1>Orders</h1>
<form>
    <div class="form-group">
        <input id="bday-month" type="month" name="bdaymonth" onkeyup="myFunction()" style=" width: 20%;">
        <input type="submit" id="btn" value="Tìm kiếm" class="btn btn-success">
    </div>
</form>
<div class="wrapper-md">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-heading font-bold">DANH SÁCH HÓA ĐƠN</div>
                <div class="panel-body">
                        <table class="table table-striped m-b-none">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Pay type</th>
                                        <th>CreatedAt</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                        <th colspan="3"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if @orders%>
                                            <% @orders.each do |order| %>
                                                <tr>
                                                    <td>
                                                        <%= order.name %>
                                                    </td>
                                                    <td>
                                                        <%= order.address %>
                                                    </td>
                                                    <td>
                                                        <%= order.phone %>
                                                    </td>
                                                    <td>
                                                        <%= order.email %>
                                                    </td>
                                                    <td>
                                                        <%= order.pay_type %>
                                                    </td>
                                                    <td>
                                                        <%= order.created_at.strftime("%d/%m/%Y") %>
                                                    </td>
                                                    <td>
                                                        <%= number_to_currency(order.total) %>
                                                    </td>
                                                    <td>
                                                        <%= link_to 'Show', order, :class => "btn btn-info" %>
                                                    </td>
                            
                                                </tr>
                                                <% end %>
                                                    <%end%>
                                </tbody>
                            </table>
                </div>
            </div>
            <h4>Total =<%= $Alltotal%></h4>
        </div>
    </div>
</div>
</div>


<br>